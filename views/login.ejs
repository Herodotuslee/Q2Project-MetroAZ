          <input type="password" id="login-input" name="password" placeholder="PASSWORD"><br><br>

          <a href="/clock">
            <button class="btn" type="submit">LOGIN</button>
          </a>
          <br>
          <span class="psw" id="forgot"><b><a href="#">Forgot password?</a></b></span><br><br>
        </form>
        <br>
      </div>
<!-- ADMIN LOGIN -->
      <div class="admin-login-box">
        <h3 id="login-header">Admin Login</h3>
        <form class="login-form" action="admin" method="post">
          <i class="fas fa-users fa-9x" id="login-icon"></i><br><br>
          <input type="text" id="login-input" name="email" placeholder="EMAIL"><br><br>
